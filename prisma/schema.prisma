datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // make sure this is set in .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)   // enum instead of free text
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}
